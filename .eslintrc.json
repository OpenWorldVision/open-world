{
  "plugins": ["@typescript-eslint"],
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "ignorePatterns": [
    "truffle-config.js",
    "**/migrations/*.js",
    "hardhat.config.js",
    "next.config.js"
